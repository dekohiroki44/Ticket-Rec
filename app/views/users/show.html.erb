<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= render 'shared/user_info' %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.events.any? %>
      <h3>イベント (<%= @user.events.count %>)</h3>
      <ol class="events">
        <%= render @events %>
      </ol>
    <% end %>
  </div>
</div>