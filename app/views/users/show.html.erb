<% provide(:title, @user.name) %>
<div class="user-seciton d-flex">
  <div class="user-section-left">
    <%= image_tag @user.image, class: "avatar" %>
    <div class="name"><%= @user.name %></div>
  </div>
  <div class="user-section-right"><%= @user.profile %></div>
  <% if @user == current_user %>
    <%= link_to "プロフィールを編集する", edit_user_registration_path(current_user) %>
  <% end %>
</div>
<div class="event-section mt-5">
  <% if @user.events.any? %>
    <h3>参加したイベント (<%= @done_events.release.count %>)</h3>
    <%= render 'events/timeline', user: @user,
                                  done_events: @done_events,
                                  upcomming_events: @upcomming_events,
                                  unsolved_events: @unsolved_events %>
  <% end %>
</div>
