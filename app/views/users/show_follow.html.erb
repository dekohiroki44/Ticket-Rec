<% provide(:title, @title) %>
<div class="d-flex flex-column">
  <%= render 'user_section', user: @user %>
  <div class="list-section mt-5 col-lg-10 mx-auto">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= paginate @users %>
    <% end %>
  </div>
</div>