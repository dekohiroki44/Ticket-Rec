<header class="navbar navbar-expand-md sticky-top" id="header-wrapper">
  <%= link_to "Ticket Rec", root_path, id: "logo", class: "navbar-brand" %>
  <%= form_tag searches_path, method: :get, class: "px-2" do %>
    <%= text_field_tag :word, '', placeholder: "キーワードを入力", class: "form-control" %>
    <%= date_field_tag :date, class: "form-control" %>
    <%= submit_tag '検索', class: "btn btn-dark" %>
  <% end %>
  <button class="navbar-toggler navbar-light" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav ml-auto">
      <% if user_signed_in? %>
      <%= link_to current_user, class:"list-group-item list-group-item-action bg-transparent" do %>
        <i class="far fa-user fa-2x"></i>マイページ
      <% end %>
      <%= link_to tickets_path, class:"list-group-item list-group-item-action bg-transparent" do %>
        <i class="far fa-comments fa-2x"></i>皆んなのチッケト
      <% end %>
      <%= link_to new_ticket_path, remote: true, class:"list-group-item list-group-item-action bg-transparent" do %>
        <i class="far fa-edit fa-2x"></i>書き込む
      <% end %>
      <%= link_to notifications_path, class:"list-group-item list-group-item-action bg-transparent" do %>
        <% if unchecked_notifications.any? %>
          <i class="fas fa-bell faa-ring animated fa-2x"></i><%= "#{unchecked_notifications.count}件の未読通知" %>
        <% else %>
          <i class="far fa-bell fa-2x mr-2"></i>通知
        <% end %>
      <% end %>
      <%= link_to about_path, class:"list-group-item list-group-item-action bg-transparent" do %>
        <i class="far fa-question-circle fa-2x"></i>Ticket Recについて
      <% end %>
      <%= link_to destroy_user_session_path, method: :delete, class:"list-group-item list-group-item-action bg-transparent" do %>
      <i class="fas fa-sign-in-alt fa-2x"></i>ログアウト
      <% end %>
    <% else %>
      <%= link_to new_user_registration_path, class:"list-group-item list-group-item-action bg-transparent" do %>
      <i class="far fa-user fa-2x mr-3"></i>新規登録
      <% end %>
      <%= link_to new_user_session_path, class:"list-group-item list-group-item-action bg-transparent" do %>
        <i class="fas fa-sign-out-alt fa-2x mr-3"></i>ログイン
      <% end %>
    <% end %>
  </div>
</div>
    </ul>
  </div>
</header>
