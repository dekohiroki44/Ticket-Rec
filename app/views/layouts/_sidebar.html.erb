<div class="bg-dark border-right" id="sidebar-wrapper">
  <%= link_to "LIVCALE", root_path, id: "logo", class: "navbar-brand sidebar-heading" %>
  <section class="current-user-section d-flex">
    <div class="avatar-box">
      <%= image_tag 'treble_clef.png', class: "clef-image"%>
      <% if user_signed_in? %>
        <%= link_to current_user do %>
          <% image_tag current_user.image, class: "avatar" %>
        <% end %>
      <% end %>
    </div>
    <% if user_signed_in? %>
      <div class="current-user-info">
        <h1><%= current_user.name %></h1>
        <span><%= link_to "view my profile", current_user %></span>
        <span><%= "#{current_user.events.count}のイベント" %></span>
      </div>
    <% end %>
  </section>
  <div class="list-group list-group-flush">
    <% if user_signed_in? %>
      <%= link_to events_path, class:"list-group-item list-group-item-action bg-dark" do %>
        <i class="far fa-comments fa-2x"></i>皆んなのイベント
      <% end %>
      <%= link_to new_event_path, class:"list-group-item list-group-item-action bg-dark" do %>
        <i class="far fa-edit fa-2x"></i>書き込む
      <% end %>
      <%= link_to notifications_path, class:"list-group-item list-group-item-action bg-dark" do %>
        <% if unchecked_notifications.any? %>
          <i class="fas fa-bell faa-ring animated fa-2x"></i><%= "#{unchecked_notifications.count}件の未読通知" %>
        <% else %>
          <i class="far fa-bell fa-2x mr-2"></i>通知
        <% end %>
      <% end %>
      <%= link_to destroy_user_session_path, method: :delete, class:"list-group-item list-group-item-action bg-dark" do %>
      <i class="fas fa-sign-out-alt fa-2x"></i>ログアウト
      <% end %>
    <% else %>
      <%= link_to new_user_session_path, class:"list-group-item list-group-item-action bg-dark" do %>
        <i class="fas fa-sign-out-alt fa-2x"></i>ログイン
      <% end %>
    <% end %>
    <%= link_to about_path, class:"list-group-item list-group-item-action bg-dark" do %>
      <i class="fas fa-info-circle fa-2x"></i>このサイトについて
    <% end %>
  </div>
</div>